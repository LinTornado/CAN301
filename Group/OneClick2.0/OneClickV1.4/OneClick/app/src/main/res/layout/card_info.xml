<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cfmdia"
        android:layout_width="310dp"
        android:layout_height="484dp"
        android:background="@drawable/dia"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9">

    </ImageView>

    <TextView
        android:id="@+id/cifo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inder"
        android:text="    Card Information"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/inder"
        android:text="Card Name:"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/tname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/inder"
        android:text="Text"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/inder"
        android:text="You want to:"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/acdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="122dp"
        android:fontFamily="@font/inder"
        android:text="Do something"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/naction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/inder"
        android:text="Do something"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="142dp"
        android:fontFamily="@font/inder"
        android:text="When you:"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/ntrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/inder"
        android:text="Do something"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/inder"
        android:text="Pattern:"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <TextView
        android:id="@+id/npattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/inder"
        android:text="No Gesture"
        android:textColor="#2196F3"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/cfmdia"
        app:layout_constraintTop_toTopOf="@id/cfmdia" />

    <ImageView
        android:id="@+id/point_one"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dot_unpress"
        app:layout_constraintRight_toLeftOf="@id/point_four"
        app:layout_constraintTop_toBottomOf="@id/pattern"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_four"
        android:layout_width="64dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dot_unpress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pattern"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_seven"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dot_unpress"
        app:layout_constraintTop_toBottomOf="@id/pattern"
        app:layout_constraintLeft_toRightOf="@id/point_four"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_two"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dot_unpress"
        app:layout_constraintRight_toLeftOf="@id/point_five"
        app:layout_constraintTop_toBottomOf="@id/point_one"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_five"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dot_unpress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_one"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />
    <ImageView
        android:id="@+id/point_eight"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dot_unpress"
        app:layout_constraintTop_toBottomOf="@id/point_four"
        app:layout_constraintLeft_toRightOf="@id/point_five"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_three"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dot_unpress"
        app:layout_constraintRight_toLeftOf="@id/point_four"
        app:layout_constraintTop_toBottomOf="@id/point_two"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_six"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dot_unpress"
        app:layout_constraintTop_toBottomOf="@id/point_five"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <ImageView
        android:id="@+id/point_nine"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dot_unpress"
        app:layout_constraintTop_toBottomOf="@id/point_eight"
        app:layout_constraintLeft_toRightOf="@id/point_four"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>